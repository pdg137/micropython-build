+++ b/ports/rp2/machine_i2c.c
@@ -35,6 +35,20 @@
 #define DEFAULT_I2C_FREQ (400000)
 #define DEFAULT_I2C_TIMEOUT (50000)
 
+#ifdef MICROPY_HW_I2C_NO_DEFAULT_PINS
